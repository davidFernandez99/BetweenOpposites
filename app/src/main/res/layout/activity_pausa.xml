<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimaryDark"
        tools:context=".View.PausaActivity">

    <TextView
            android:text="@string/partida_pausada_aux"
            android:layout_width="166dp"
            android:layout_height="52dp"
            android:id="@+id/text_pausa" android:textSize="18sp"
            tools:layout_editor_absoluteY="274dp" tools:layout_editor_absoluteX="123dp"/>
    <ImageButton
            android:layout_width="51dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher_foreground"
            android:id="@+id/btn_exit"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="283dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="397dp"
            android:layout_marginBottom="195dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/text_pausa" android:contentDescription="@string/exit"/>
    <ImageButton
            android:layout_width="51dp"
            android:layout_height="50dp" app:srcCompat="@mipmap/ic_launcher_foreground_2"
            android:id="@+id/btn_renaudar"
            app:layout_constraintTop_toBottomOf="@+id/text_pausa"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="396dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="284dp" android:layout_marginBottom="195dp"
            app:layout_constraintBottom_toBottomOf="parent" android:contentDescription="@string/renaudar"/>
</android.support.constraint.ConstraintLayout>