<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UnJugador">

    <Button
            android:text="@string/ganar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Ganar" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="77dp"
            app:layout_constraintStart_toEndOf="@+id/btn_Morir" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="83dp"/>
    <Button
            android:text="@string/mor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_Morir" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.499"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="75dp"
            app:layout_constraintEnd_toStartOf="@+id/btn_Ganar" android:layout_marginEnd="77dp"/>
    <ImageButton
            android:layout_width="29dp"
            android:layout_height="29dp" app:srcCompat="@mipmap/ic_launcher_foreground"
            android:id="@+id/btn_pausa"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginStart="42dp"
            app:layout_constraintStart_toEndOf="@+id/btn_Ganar" app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="208dp" app:layout_constraintEnd_toEndOf="parent"
            android:contentDescription="@string/pausa" app:layout_constraintHorizontal_bias="0.384"
            app:layout_constraintVertical_bias="0.112"/>
</android.support.constraint.ConstraintLayout>