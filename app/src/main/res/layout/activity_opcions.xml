<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/fondo_opciones">

    <Switch
            android:layout_width="130dp"
            android:layout_height="72dp"
            android:id="@+id/switch_musica"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="221dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="153dp" android:text="@string/musica"
            app:layout_constraintBottom_toTopOf="@+id/switch_efectos" app:layout_constraintVertical_bias="0.107"
            android:textColor="@android:color/white" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="221dp"/>
    <Switch
            android:text="@string/efectos"
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:id="@+id/switch_efectos"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/switch_musica" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="221dp" android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="221dp"/>
    <Switch
            android:text="@string/vibracion"
            android:layout_width="132dp"
            android:layout_height="46dp"
            android:id="@+id/switch_vibracion"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/switch_efectos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="221dp" android:textColor="@android:color/white"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="221dp"/>

    <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/switch_vibracion" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.507"/>
    <Button
            android:text="Log Out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_logOut"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintHorizontal_bias="0.498"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/sign_in_button"/>

    <TextView
            android:layout_width="181dp"
            android:layout_height="35dp"
            android:id="@+id/txt_nomUsuari"
            android:textColor="@android:color/white"
            android:layout_marginTop="22dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_logOut"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="89dp" app:layout_constraintBottom_toTopOf="@+id/txt_email"
            app:layout_constraintStart_toEndOf="@+id/txt_usuarioLetra" android:layout_marginStart="21dp"
            app:layout_constraintHorizontal_bias="0.0"/>
    <TextView
            android:layout_width="216dp"
            android:layout_height="35dp"
            android:id="@+id/txt_email"
            app:layout_constraintTop_toBottomOf="@+id/txt_nomUsuari" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="140dp" android:textColor="@android:color/white"/>
    <TextView
            android:text="@string/UsuarioLetra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_usuarioLetra"
            android:textSize="18sp"
            android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginTop="620dp"
            app:layout_constraintTop_toTopOf="parent"
    />
    <TextView
            android:text="@string/correo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/txt_correoLetra"
            android:textSize="18sp" android:textColor="@android:color/white"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="56dp" android:layout_marginTop="17dp"
            app:layout_constraintTop_toBottomOf="@+id/txt_usuarioLetra"
            app:layout_constraintEnd_toStartOf="@+id/txt_email" android:layout_marginEnd="31dp"/>
</android.support.constraint.ConstraintLayout>