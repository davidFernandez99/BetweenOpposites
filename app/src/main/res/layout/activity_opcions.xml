<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Opcions">
    <Switch
            android:onClick="toastMe"
            android:layout_width="130dp"
            android:layout_height="72dp"
            android:id="@+id/switch_musica"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="153dp" android:text="MÚSICA"/>
    <Switch
            android:text="EFECTOS"
            android:layout_width="132dp"
            android:layout_height="48dp"
            android:id="@+id/switch_efectos"
            android:layout_marginTop="56dp"
            app:layout_constraintTop_toBottomOf="@+id/switch_musica" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp"/>
    <Switch
            android:text="VIBRACIÓN"
            android:layout_width="132dp"
            android:layout_height="46dp"
            android:id="@+id/switch_vibracion"
            android:layout_marginTop="62dp"
            app:layout_constraintTop_toBottomOf="@+id/switch_efectos" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="66dp"/>
    <Button
            android:text="Iniciar Sesión"
            android:drawableTop="@drawable/ic_foto_google"
            android:layout_width="wrap_content"
            android:layout_height="93dp"
            android:id="@+id/btn_Google"
            android:layout_marginTop="166dp" app:layout_constraintTop_toBottomOf="@+id/switch_vibracion"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginBottom="97dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="1.0" android:layout_marginEnd="85dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="85dp"/>
    <ImageView
            android:layout_width="159dp"
            android:layout_height="64dp"
            app:srcCompat="@drawable/foto_opciones"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp" app:layout_constraintEnd_toEndOf="parent" android:id="@+id/img_opcions"/>
</android.support.constraint.ConstraintLayout>